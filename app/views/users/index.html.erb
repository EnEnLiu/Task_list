<h1><%= t('users.sign-in')%></h1>
<%= notice %>

<%= form_for( @user, url: login_path, method: 'post') do |f| %>
  <%= t('users.email') %>：<%= f.text_field :email %><br>
  <%= t('users.password') %>：<%= f.password_field :password %><br>
  <%= f.submit t('users.sign-in')  %>
<% end %>

<%= link_to t('users.sign-up-link'), singup_path %>
<%= link_to t('navbar.home-page'), welcome_path %>
