<h1>所有任務</h1>

<%= link_to  "新增任務", new_task_path %>

<table>
  <thead>
    <tr>
      <td>編號</td>
      <td>標題</td>
      <td>內容</td>
      <td>優先順序</td>
      <td>狀態</td>
      <td>任務開始時間</td>
      <td>任務結束時間</td>

    </tr>
  </thead>
  <tbody>
    <% n = 1 %>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= n %></td>
      <td><%= task.title %></td>
      <td><%= task.content %></td>
      <td><%= task.priority %></td>
      <td><%= task.status %></td>
      <td><%= task.start_at %></td>
      <td><%= task.end_at %></td>
      <td>
        <%= link_to '修改', edit_task_path(task) %>
        <%= link_to '刪除', task_path(task), method: 'delete', data: {confirm: '確定要刪除？'} %>
      </td>
    </tr>
    <% n+=1 %>
    <% end %>
  </tbody>
</table>
